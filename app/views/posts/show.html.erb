<h1><%= markdown @post.title %></h1>

<div class="row">
  <div class="span8">
    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>     

    <%= image_tag(@post.postpic.url) if @post.postpic? %> submitted <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.name %>
    
    <p><%= markdown @post.body %></p>

    <%= render @comments %>

  </div>
  <div class="span4">
    <% if can? :edit, @post %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-large btn-block' %>
    <% end %>
  </div>
</div>

